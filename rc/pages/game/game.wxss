/* pages/game/game.wxss */
.game{
  width: 100%;
  /* height: 500rpx; */
  background:url('https://suncloud.club/bg.png') repeat;
  /* flex-direction: row; */
  justify-content: center;
  align-items:center;
}
.game-content{
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: row;
   justify-content: center;
   flex-wrap: wrap;
   border-top: 1px solid #330000;  
   border-bottom: 1px solid #330000; 
   padding:10rpx 0;
   align-items:center;
}
.game-content .img{
   width: 25%;
   height: 33.33%;
   margin: 0 auto;
   display: flex;
   flex-direction: row;
   justify-content: center;
   padding-bottom: 5rpx;
   align-items:center;
}
.game-content .img image{
  border-radius: 50%;
}
.selected{
  background-color: greenyellow;
  border-radius: 20%;
}